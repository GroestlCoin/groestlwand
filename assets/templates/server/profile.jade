extend layout

block content
  .container.container-main
    .panel.panel-default
      .panel-body
        span Your balance is&nbsp;
        .btn.balance-screen <span class="currency-mark">√ê</span>&nbsp;#{user.balance}

        span.pull-right Account # #{user.user_id}

      hr.hr-small
      .row.panel-body
        .col-md-6
          p To give your friends some groestlcoin, drag this bookmarklet to your bookmarks bar:
          .text-center
            a(alt="Groestlwand V#{version}" href="javascript:#{bookmarklet}" class="bookmarklet" onclick="alert('Drag me to the bookmarks bar')" title="Drag me to the bookmarks bar") Groestlwand V#{version}

        .col-md-6
          form(action="/withdraw", method="POST")
            input(type="hidden", name="_csrf", value=csrf_token)

            p
              |Withdraw&nbsp;
              input.form-control.inline-control(type="number" placeholder="so many" name="amount")
              |&nbsp;groestlcoins.

            p
              |Send to:&nbsp;
              input.form-control(type="text" placeholder="your address" name="address")

            p
              button.btn-primary.btn.btn-lg(type="submit") Withdraw!

      hr.hr-small
      .panel-body
        p Groestlwand account # #{user.user_id} is currently linked to:
        ul.linked-accounts
          for account in user.accounts
            li.account-tab
              div #{account.display_name}
              div on #{account.provider}

      hr.hr-small
      .panel-body
        p WARNING! Groestlwand is still ALPHA software. Some stuff probably doesn't work right, and it is hosted on a development server. Please don't deposit large amounts of groestlcoin yet.

